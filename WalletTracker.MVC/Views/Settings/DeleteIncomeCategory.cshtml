@using WalletTracker.Application.Income
@using WalletTracker.Application.Settings.Commands.DeleteIncomeCategory

@model DeleteIncomeCategoryByIdCommand

@{
    ViewData["Title"] = "DeleteIncomeCategory";
    Layout = "~/Views/Shared/_SettingsLayout.cshtml";
}

<div class="row">
    <div class="col-md-10 mx-auto p-4 rounded-3 form-column">
        <h3 class="text-center">Delete category</h3>
        <form id="deleteIncomeCategoryForm" method="post">
            <div class="form-floating mb-3">
                <select asp-for="Id" asp-items="@(new SelectList(Model.UserCategoryDtos,
                        nameof(IncomeCategoryAssignedToUserDto.Id),
                        nameof(IncomeCategoryAssignedToUserDto.Name)))"
                        class="form-select form-select-md">
                    <option value="0">Please select one</option>
                </select>
                <label asp-for="Id">Category</label>
                <span asp-validation-for="Id" class="text-danger" id="idSpan"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-danger">Delete</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/deleteIncomeCategory.js"></script>
}