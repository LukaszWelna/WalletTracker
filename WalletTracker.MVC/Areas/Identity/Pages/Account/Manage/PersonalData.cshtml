@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="row">
    <div class="col-md-10 mx-auto p-4 rounded-3 form-column">
        <h2 class="text-center">Personal Data</h2>
        <hr />
        <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p>
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
       
        <div class="row">
            <div class="col-12 d-flex flex-column flex-sm-row justify-content-end">
                <div class="col-12 col-sm-auto mb-2 mb-sm-0 me-sm-1">
                    <form id="download-data" asp-page="DownloadPersonalData" method="post">
                        <button class="btn btn-primary w-100" type="submit">Download</button>
                    </form>
                </div>
                <div class="col-12 col-sm-auto">
                    <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger w-100">Delete</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
